<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Account Register</h3>
                </div>
                <img src="/img/logo.png" alt="Clickselly" class="rounded-circle mx-auto display-block m-4 logo">
                <div class="card-body">
                    <form action="/signup" method="post">
                        <div class="form-group">
                            <input type="text" name="fullname" id="" placeholder="Full Name" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="username" id="" placeholder="Username" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" id="" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                SignUp
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>