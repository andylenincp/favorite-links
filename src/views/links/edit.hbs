<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="post">
                        <div class="form-group">
                            <input type="text" name="title" id="" class="form-control" placeholder="Title" value="{{link.title}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" name="url" id="" class="form-control" placeholder="Url" value="{{link.url}}">
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="" rows="2" class="form-control" placeholder="Description">{{link.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>